<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_primary"
    tools:context=".GameActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/background_primary"
        app:titleTextColor="@color/text_on_background"
        app:navigationIconTint="@color/text_on_background"
        app:navigationIcon="@android:drawable/ic_menu_close_clear_cancel" />

    <TextView
        android:id="@+id/game_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingVertical="12dp"
        android:textSize="18sp"
        android:textColor="@color/text_on_background" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.zotov424.conwaysgame.GameGridView
            android:id="@+id/game_grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="12dp"
        android:background="@color/background_primary">

        <ImageButton
            android:id="@+id/btn_start"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/start_sim"
            android:src="@android:drawable/ic_media_play"
            app:tint="@color/card_background" />

        <ImageButton
            android:id="@+id/btn_step"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/step_sim"
            android:src="@android:drawable/ic_media_next"
            app:tint="@color/card_background" />

        <ImageButton
            android:id="@+id/btn_stop"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/stop_sim"
            android:src="@android:drawable/ic_media_pause"
            app:tint="@color/card_background" />

        <ImageButton
            android:id="@+id/btn_edit"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/edit_map"
            android:src="@android:drawable/ic_menu_edit"
            app:tint="@color/card_background" />

        <ImageButton
            android:id="@+id/btn_delete"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/delete"
            android:src="@android:drawable/ic_menu_delete"
            app:tint="@color/card_background" />
    </LinearLayout>
</LinearLayout>
